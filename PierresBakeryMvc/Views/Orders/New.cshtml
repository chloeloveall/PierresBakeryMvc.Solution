@{
  Layout = "_Layout";
}

<div class="container">
  <div class="centered-content">
    <h1>ADD NEW @Model.VendorName ORDER</h1>
    <form action="/vendors/@Model.Id/orders" method="post" class="style-form">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="orderTitle">ORDER TITLE</label>
          <input id="orderTitle" name="orderTitle" type="text" class="form-control" placeholder="ORDER TITLE" required>
        </div>
        <div class="form-group col-md-12">
          <label for="orderPlacedBy">ORDER PLACED BY</label>
          <input id="orderPlacedBy" name="orderPlacedBy" type="text" class="form-control" placeholder="ORDER PLACED BY" required>
        </div>
      </div>
      <div class="form-group col-md-12">
        <label for="orderDescription">ORDER DESCRIPTION</label>
        <textarea id="orderDescription" name="orderDescription" type="text" class="form-control" placeholder="DESCRIPTION AND NOTES" required></textarea>
      </div>
      <div class="form-group col-md-12">
        <label for="orderPrice">ORDER PRICE</label>
        <input id="orderPrice" name="orderPrice" type="number" min="0" class="form-control" placeholder="ORDER PRICE" required>
      </div>
      <div class="form-group col-md-12 form-sub">
        <button type="submit" class="btn btn-block">ADD ORDER</button>
      </div>
    </form>
  </div>
</div>

<div class="footer">
  <div class="container">
    <div class="row">
      <div class="col-xs-4">
        <p><a href="/vendors" role="button">RETURN TO VENDORS</a></p>
      </div>
      <div class="col-xs-4">
        <p>COPYRIGHT &copy; <a href = "mailto: chloeloveall@protonmail.com">CHLOE LOVEALL</a> 2021</p>
      </div>
      <div class="col-xs-4">
        <p><a href="/" role="button">RETURN TO HOME</a></p>
      </div>
    </div>
  </div>
</div>
    
